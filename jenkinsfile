pipeline {
   agent any
   stages {
      stage('git checkout') {
         steps {
            git 'https://github.com/shaikshareefmastan/jenkinspro.git'
         }
       }
      stage('Build application') {
         steps {
               checkout scm
               docker.image('httpd').withRun('-p 8080:80'){ c
                    sh "touch /var/www/html/index.html"
		    sh "echo hello > /var/www/html/index.html"
                    sh "systemctl restart httpd.service"
	    } 				
            
         }
      }
   }
}
